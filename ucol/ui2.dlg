			option(disn) ///
			label("Disney")
		CHECKBOX ck_grad    @     +25   @       ., ///
			option(xcust) ///
			label("other")
		TEXT tx_separate @ +15 @ ., ///
			label("---------------------------")
		CHECKBOX ck_all @ +15 @ ., ///
			option(all) ///
			default(0) ///
			label("Select All") ///
			onclickon(script report_gb_all_off) ///
			onclickoff(script report_gb_all_on)
END


