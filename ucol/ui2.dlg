SCRIPT main_gb_all_off
	BEGIN
	   main.ck_sr.seton
	   main.ck_grad.seton
	   main.ck_output.seton
	END

SCRIPT main_gb_all_on
	BEGIN
	   main.ck_sr.setoff
	   main.ck_grad.setoff
	   main.ck_output.setoff
	END

SCRIPT turn_ck_off
	BEGIN
		main.ck_all.seton
